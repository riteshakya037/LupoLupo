<?xml version="1.0" encoding="utf-8"?>
<com.lupolupo.android.views.custom.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:fixed_attribute="WIDTH"
    app:horizontal_ratio="8"
    app:vertical_ratio="5"
    tools:context=".views.fragments.DashFragment">

    <com.lupolupo.android.views.custom.ViewPagerCustomDuration
        android:id="@+id/coverPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:scrollSpeed="500" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tabDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />
</com.lupolupo.android.views.custom.RatioRelativeLayout>