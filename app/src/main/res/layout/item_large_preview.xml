<?xml version="1.0" encoding="utf-8"?>
<com.lupolupo.android.views.custom.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:fixed_attribute="WIDTH"
    app:horizontal_ratio="8"
    app:vertical_ratio="5"
    tools:context=".views.fragments.DashFragment">

    <RelativeLayout
        android:id="@+id/coverPagerHolder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.lupolupo.android.views.custom.ViewPagerCustomDuration
            android:id="@+id/coverPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:scrollSpeed="500" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabDots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/no_feature_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/there_is_no_any_featured_comic" />
</com.lupolupo.android.views.custom.RatioRelativeLayout>