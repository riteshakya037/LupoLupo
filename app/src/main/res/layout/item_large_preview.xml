<?xml version="1.0" encoding="utf-8"?>
<com.blues.lupolupo.views.custom.RatioRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:fixed_attribute="WIDTH"
    app:horizontal_ratio="8"
    app:vertical_ratio="5">

    <android.support.v4.view.ViewPager
        android:id="@+id/coverPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabDots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp" />
</com.blues.lupolupo.views.custom.RatioRelativeLayout>